body {
  line-height: 1;
  font-size: .625em;
  background: Wheat url(<%= asset_path("top.png") %>) repeat-x;
  font-family: Calibri;
}

ol, ul {
  list-style: none;
}

a {
  text-decoration: none;
  color: #300000;
}

a:hover {
  text-decoration: underline;
}

a:visited {
  color: #300000;
}

/* remember to define focus styles! */
:focus {
  outline: 0;
}

/* remember to highlight inserts somehow! */
ins {
  text-decoration: none;
}
del {
  text-decoration: line-through;
}

/* tables still need 'cellspacing="0"' in the markup */
table {
  border-collapse: collapse;
  border-spacing: 0;
}

.header h1 {
  display: inline-block;
  vertical-align: middle;
  padding-top: 1.5em;
}

.header h1 a {
  display: block;
  width: 280px;
  height: 51px;
  text-indent: -9999px;
  text-decoration: none;
  background: url(<%= asset_path("worklex.png") %>)
}

.main {
  color: #EEE;
  margin-top: 30px;
}

.main a
{
  font-size: 1.7em;
}

.main p,
.main ol,
.main .fold .blurb {
  font-size: 1.6em;
  line-height: 1.5;
}

.main .info p {
  color: #5e543e;
  margin: 1.5em 36px;
}

.main .title {
  margin-left: 36px;
  display: inline-block;
}

.main .title h2 {
  line-height: 44px;
  display: inline;
  color: #CC3300;
  font-size: 2em;
  width: 65%;
}

.main .title h2 a {
  color: #CC3300;
}

.main .title h3 {
  display: inline;
  color: #CC3300;
  font-size: 2em;
  margin-left: 10px;
}

.main .info {
  padding-top: 20px;
  padding-bottom: 20px;
  background: white;
  border: 1px solid gray;
  #-moz-border-radius: 10px;
  #-webkit-border-radius: 10px;
}

/* Grid */
.main .info .gems ol {
  background: #F5F1E7;
  margin: 1.5em 36px;
  border: 1px solid gray;
}

.main .info .gems ol li {
  padding: 8px;
  padding-left: 1.8em;
  border-top: 1px solid #B4AC99;
}

.main .info .gems ol li:first-child {
  border: none;
}

.main .info .gems ol li:hover {
  background: LightGray;
}

.main .info .gems ol li a {
  display: block;
  vertical-align: top;
  font-size: 0.8em;
  color: #90856C;
  width: 100%;
}

.main .info .maps_show {
  border:none;
  margin: 1.5em 36px;
  #margin: 0px 8px 0px 3px;
}

.main .info .maps {
  border:none;
  #margin: 1.5em 36px;
  margin: 0px 8px 0px 3px;
}

/* Pagination */
.pagination {
  padding: 0 2em 2em;
  text-align: center;
}

.pagination * {
  font-size: 1.5em;
  padding: 5px;
  #font-weight: 900;
  text-align: center;
  color: #120606;
}

.pagination .disabled, .pagination .current {
  color: #777;
}


/* Forms */
.main .info form {
  margin: 1.5em 36px;
  color: #5e543e;
}

label, .form_links {
  font-weight: 100;
  display: block;
  font-size: 1.7em;
}

.form_links {
  display: inline-block;
  text-align: right;
}

.text_field,
.password_field,
.url_field {
 margin: 0 0 15px 0;
}

.text_field input,
.text_area textarea,
.password_field input,
.url_field input,
.edit_user input[type="text"] {
  background: #d2c8b2;
  border: none;
  #padding: 10px 3px 3px 3x;
  font-size: 24px;
  #-moz-box-shadow: inset 0 3px 3px #706751;
  #-webkit-box-shadow: inset 0 3px 3px #706751;
  box-shadow: inset 0 3px 3px #706751;
  #-moz-border-radius: 8px;
  #-webkit-border-radius: 8px;
  #border-radius: 8px;
  color: #453000;
  border-bottom: 2px solid #fff8e8;
  #margin: 5px 0 0 0;
  font-family: Calibri;
}

.text_field label,
.text_area label,
.password_field label,
.avatar_field label,
.url_field label {
  font-size: 16px;
}

.edit_user {
  margin: 0 95px;
}

.edit_user label {
  margin-bottom: 3px;
}

.edit_user h3 {
  color: #b40000;
  font-size: 24px;
  clear: both;
  margin-bottom: 25px;
}

input[type='submit'] {
  margin-top: 10px;
  display: block;
  padding: 8px 15px 8px 15px;
  #background: #c40000;
  color: #fff;
  font-weight: bold;
  font-size: 15px;
  text-shadow: 0 -1px 1px #250300;
  border: 0;
  cursor: pointer;
  font-family: Calibri;
  -moz-box-shadow: inset 0 1px 1px #f34217, 0 1px 1px #332300;
  -webkit-box-shadow: inset 0 1px 1px #f34217, 0 1px 1px #332300;
  box-shadow: inset 0 1px 1px #f34217, 0 1px 1px #332300;
  -moz-border-radius: 4px;
  -webkit-border-radius: 4px;
  border-radius: 4px;
  border: 1px solid OrangeRed;
 # background-image: -moz-linear-gradient(bottom, #690900 0%, #8f0e00 49%,  #a41200 50%, #cf1900 100%);
  background-image: -webkit-gradient(linear,left top,left bottom,color-stop(1, #FF6600),color-stop(.5, DarkOrange),color-stop(.49, DarkOrange),color-stop(0, OrangeRed));
}

/* Flash, Errors */
#flash-border {
  #background: Orange;
  padding: 0px;
  margin: -26px 0 0px;
}

#flash_success, #flash_notice, #flash_failure {
  font-size: 13px;
  #font-weight: bold;
  #font-family: Calibri;
  color: #fff;
  text-align: center;
  z-index: 100000;
  height: 45px;
  line-height: 47px;
}

#flash_success span,
#flash_notice span,
#flash_failure span {
  height: 16px;
  line-height: 16px;
  padding: 7px 7px 7px 30px;
  -webkit-border-radius: 3px;
  -moz-border-radius: 3px;
  border-radius: 3px;
  -webkit-box-shadow: 0 1px 0 rgba(255,255,255,.2), inset 0 1px 2px rgba(0,0,0,.7);
  -moz-box-shadow: 0 1px 0 rgba(255,255,255,.2), inset 0 1px 2px rgba(0,0,0,.7);
  box-shadow: 0 1px 0 rgba(255,255,255,.2), inset 0 1px 2px rgba(0,0,0,.7);
}

#flash_success span {
  background: rgba(0,0,0,.2) url(<%= asset_path("success.png")%>) 7px 6px no-repeat;
}

#flash_notice span {
  background: rgba(0,0,0,.2) url(<%= asset_path("notice.png")%>) 7px 6px no-repeat;
}

#flash_failure span {
  background: rgba(0,0,0,.2) url(<%= asset_path("error.png")%>) 7px 6px no-repeat;
}

/* Navigation */
#nav-cap {
  float: right;
  margin: 50px 0 0 0;
  position: relative;
  font-size: 16px;
  color: #fff;
}

#nav-cap a{
  color: #fff;
}

/* Profile */
#profile {
  margin-top: 15px;
  margin-left: 15px;
  margin-right: 23px;
}



